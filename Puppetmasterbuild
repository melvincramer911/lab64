#apt update

#echo "backing up /etc/hosts"
cp -a /etc/hosts /etc/hosts.org.$(date +%s)

set -vx 

echo "commenting out all the lines of /etc/hosts"
sed -i 's/^\([^#]\)/#\1/g' /etc/hosts





